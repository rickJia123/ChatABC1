<resources>

    <!--     提交类型按钮通用样式-->
    <style name="ButtonConfirm">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/defaultButtonColor</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/defaultTitleColor</item>
    </style>

    <!--     通用editText 样式-->
    <style name="CommonInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/back_input_corner</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/defaultTextColor</item>
        <item name="android:textCursorDrawable">@color/defaultTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/defaultTitleColor</item>
    </style>

</resources>
